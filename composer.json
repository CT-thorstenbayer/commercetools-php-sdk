{
    "name": "sphere/php-sdk",
    "license": "MIT",
    "type": "project",
    "description": "The Sphere.IO PHP SDK",
    "autoload": {
        "psr-4": { "Sphere\\Core\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Sphere\\Core\\": "tests/unit/"
        }
    },
    "require": {
        "php": ">=5.4",
        "guzzlehttp/guzzle": "~5.0",
        "guzzlehttp/log-subscriber": "~1.0"
    },
    "require-dev": {
        "psr/log": "~1.0",
        "phpunit/phpunit": "~4.0",
        "phpmd/phpmd": "~1.0",
        "squizlabs/php_codesniffer": "~1.0",
        "pdepend/pdepend": "1.1.*",
        "phploc/phploc": "2.0.*",
        "sebastian/phpcpd": "1.4.*",
        "covex-nn/phpcb": "1.0.4.*",
        "doctrine/cache": "~1.4",
        "apigen/apigen": "~4.0",
        "monolog/monolog": "~1.12",
        "behat/behat": "~3.0"
    },
    "suggest": {
        "ext-intl": "for convenient handling of localizations"
    }
}
